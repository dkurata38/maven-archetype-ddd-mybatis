<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        name="basic">
    <!-- 追加で設定してほしい値 -->
    <requiredProperties>
        <!-- プロジェクト名 -->
        <requiredProperty key="projectName">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <!-- rootパッケージ名 -->
        <requiredProperty key="rootPackage">
            <defaultValue>${groupId}.${artifactId.replaceAll("-", "_")}</defaultValue>
        </requiredProperty>
        <!-- rootパッケージのパス -->
        <requiredProperty key="rootPackagePath">
            <defaultValue>${rootPackage.replace("\\.", "/")}</defaultValue>
        </requiredProperty>
        <!-- 最初に作成するWEBアプリケーションの名前 -->
        <requiredProperty key="firstApplicationName">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>domain</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>infrastructure</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>

